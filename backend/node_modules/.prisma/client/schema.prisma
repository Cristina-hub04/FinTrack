// Define the database connection
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Generate Prisma client
generator client {
  provider = "prisma-client-js"
}

// Transaction model
model Transaction {
  id          Int      @id @default(autoincrement())
  description String
  amount      Float
  category    String
  type        String // store INCOME or EXPENSE as string
  date        DateTime @default(now())
}
